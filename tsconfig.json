{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "target": "es2017",
    "disableSizeLimit": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": [ "es2017", "dom" ]
  },
  "include": [
    "lib/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
